{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ES6",

    /* Modules */
    "module": "ES2020",
    "moduleResolution": "Node",
    "baseUrl": "./",
    "allowSyntheticDefaultImports": true, 

    /* Emit */
    "outDir": "dist",
    "removeComments": true,

    "isolatedModules": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,
    "alwaysStrict": true,
    "skipLibCheck": true
  }, 
  "include": ["./src/**/*.ts"]
}
