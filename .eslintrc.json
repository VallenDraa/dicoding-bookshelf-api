{
	"env": {
		"browser": true,
		"es2021": true
	},
	"extends": "xo",
	"overrides": [
		{
			"extends": ["xo-typescript"],
			"files": ["*.ts", "*.tsx"]
		}
	],
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"rules": {
		// Note: you must disable the base rule as it can report incorrect errors
		"object-curly-spacing": "off",
		"@typescript-eslint/object-curly-spacing": "off"
	}
}
